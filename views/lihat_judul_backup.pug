extends templates/public-lihat-judul

block navigasi
  a(class='item primary-color',href='/',style='color:#777777;')
    | Halaman Awal
  a(class='item primary-color',href='/lihat_judul',style='color:#AB2531;')
      | Lihat Judul
  .right.menu
    a(class='item grey-text',href='/tentang')
      aside(class='grey-text') Tentang
    a(class='item grey-text',href='/panduan')
      aside(class='grey-text') Panduan
    a(class='item grey-text',href='/daftar')
      aside(class='grey-text') Daftar

block content
  .sixteen.wide.column.grey-text
    .ui.horizontal.divider
      h5.primary-color Form Pencarian
    br
    .ui.form
      .fields
        .sixteen.wide.field
          div Judul Tugas Akhir
          input(type='text', placeholder='Tuliskan Judul Tugas Akhir yang Anda cari')
      .fields
        .eight.wide.field
          div Institusi Pendidikan
          select.ui.dropdown(name='universitas')
            option(value='') Pilih asal Tugas Akhir Institusi Pendidikan
        .eight.wide.field
          div Jenjang
          select.ui.dropdown(name='jenjang')
            option(value='') Pilih jenjang
      .fields
        .eight.wide.field
          div Prodi
          select.ui.dropdown(name='universitas')
            option(value='') Pilih prodi Tugas Akhir
        .eight.wide.field
          div Tahun Ajaran
          select.ui.dropdown(name='tahun_ajaran')
            option(value='') Pilih tahun ajaran Tugas Akhir
      .fields
        .eight.wide.field
          div Semester
          select.ui.dropdown(name='semester')
            option(value='') Pilih semester
        .eight.wide.field
          div Dosen pengusul judul
          select.ui.dropdown(name='dosen_pengusul')
            option(value='') Pilih Dosen pengusul judul
      .fields
        .eight.wide.field
          button(type='submit',class='big ui button button-submit',style='background: linear-gradient(to bottom, rgba(73,155,234,1) 0%, rgba(6,77,153,1) 100%);color:#FFFFFF;') Kirim
  .sixteen.wide.column.grey-text
    .ui.horizontal.divider
      h5.primary-color Daftar Judul
    .ui.middle.aligned.divided.list
      .item(style='padding:1em;')
        .right.floated.content
          a(href='#') Lihat detail
        .content
          | Judul A
      .item(style='padding:1em;')
        .right.floated.content
          a(href='#') Lihat detail
        .content
          | Judul B
