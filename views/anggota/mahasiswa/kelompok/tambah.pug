extends ../templates/template1

block navigasi
  a(class='item primary-color',href='/',style='color:#777777;')
    .text
      | Dashboard
  a(class='item primary-color',href='/kelompok',style='color:#AB2531;')
    .text
      | Kelompok TA
  .right.menu
    a(class='item grey-text',href='#')
      i.alarm.outline.icon.medium.grey-text
    a.item.ui.dropdown
      .text.grey-text
        | username
      i.dropdown.icon
      .menu
        .item.nav-pengaturan
          i.setting.icon.grey-text
          span.grey-text Pengaturan
        .item.nav-keluar
          i.sign.out.icon.grey-text
          span.grey-text Keluar

block main-middle
  .ui.segment.grey-text(align='center',style='background: linear-gradient(141deg, #e74c3c 10%, #c0392b 51%, #c0392b 75%);color:#FFFFFF;')
    i.users.icon
    | Tambah Kelompok
  .ui.segment.grey-text
      .ui.form
        .fields
          .sixteen.wide.field
            .ui.left.icon.input
              input(type='text', placeholder='Tuliskan No TA',style='width:100%;')
              i.search.icon
      .ui.accordion
        .title
          i.dropdown.icon.blue-text
          span.blue-text Lakukan pencarian secara detail
        .content
          .eight.wide.field
            div Tahun Ajaran
            select.ui.dropdown(name='tahun_ajaran')
              option(value='') Pilih tahun ajaran Tugas Akhir
          br           
          .eight.wide.field
            div Semester
            select.ui.dropdown(name='semester')
              option(value='') Pilih semester
          br
          .fields
            .eight.wide.field
              button(type='submit',class='large ui button button-submit',style='background: linear-gradient(to bottom, rgba(73,155,234,1) 0%, rgba(6,77,153,1) 100%);color:#FFFFFF;') Mulai Cari


      .ui.relaxed.divided.list
          .item(style='padding:1em;')
            .content
              a.tambah-kelompok-ta(href='#') 1. TA171801003
          .item(style='padding:1em;')
            .content
              a.tambah-kelompok-ta(href='#')  2. TA171801004
          .item(style='padding:1em;')
            .content
              a.tambah-kelompok-ta(href='#')  3. TA171801005

block right-middle
  .ui.card
    .image
      img(src='https://semantic-ui.com/images/avatar2/large/kristy.png')
    .content
      a.header username
      .meta
        span.date Nama Lengkap
      .description
        | Deskripsi
    .extra.content
      a(href='/pengaturan')
        i.setting.icon
        | Pengaturan

block modal
  .ui.modal.tambah-kelompok-ta-modal
    i.close.icon
    .header TA171801003
      a.ui.button(style='float:right;background: linear-gradient(141deg, #2ecc71 10%, #27ae60 51%, #27ae60 75%);color:#FFFFFF;',href='/mahasiswa/kelompok/tambah')
        i.icon.add
        |   Gabung Kelompok
    .content
      h4 Anggota Kelompok
      ol
        li NIM - Nama
      br
      h4 Tugas Akhir
      p Judul:
      br
      .ui.grid
        .eight.wide.column(align='center')
          p Poster
          img.ui.medium.image(src='https://semantic-ui.com/images/wireframe/image.png')
        .eight.wide.column(align='center')
          p Video
          video(width='300',height:'250',controls)
            source(src='https://www.w3schools.com/html/mov_bbb.mp4',type='video/mp4')
