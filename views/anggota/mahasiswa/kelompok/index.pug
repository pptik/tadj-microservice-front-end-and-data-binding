extends ../templates/template1

block navigasi
  a(class='item primary-color',href='/',style='color:#777777;')
    .text
      | Dashboard
  a(class='item primary-color',href='/kelompok',style='color:#AB2531;')
    .text
      | Kelompok TA
  .right.menu
    a(class='item grey-text',href='#')
      i.alarm.outline.icon.medium.grey-text
    a.item.ui.dropdown
      .text.grey-text
        | {{username}}
      i.dropdown.icon
      .menu
        .item.nav-pengaturan
          i.setting.icon.grey-text
          span.grey-text Pengaturan
        .item.nav-keluar
          i.sign.out.icon.grey-text
          span.grey-text Keluar

block main-middle
  .ui.segment.grey-text(align='center',style='background: linear-gradient(141deg, #e74c3c 10%, #c0392b 51%, #c0392b 75%);color:#FFFFFF;')
    i.users.icon
    | Kelompok
  .ui.segment.grey-text
    span#hidden-user-id(style='display:none;') #{idPengguna}
    span#hidden-access-token(style='display:none;') #{accessToken}
    span(ng-controller='controllerGetUniversitasMahasiswa')
      span(ng-if='banyakUniversitas == 0')
        | Anda belum terdaftar di suatu Institusi Pendidikan, silahkan klik &nbsp;
        a(href='/mahasiswa/pengaturan/akademik') disini&nbsp;
        |  untuk mendaftar ke Institusi Pendidikan.
      span(ng-if='banyakUniversitas > 0')
        p Pilih Universitas
          span(ng-repeat='universitas in universitas_prodi')
            .ui.relaxed.divided.list
                  .item(style='padding:1em;')
                    .content
                      a(href='#') 1. {{universitas.nim_nip}}

block right-middle
  .ui.card
    .image
      img(src='{{foto}}')
    .content
      a.header {{username}}
      .meta
        span.date {{nama_lengkap}}
      .description
        | Deskripsi
    .extra.content
      a(href='/pengaturan')
        i.setting.icon
        | Pengaturan
