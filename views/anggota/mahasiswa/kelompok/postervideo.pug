extends ../templates/template1

block navigasi
  a(class='item primary-color',href='/',style='color:#777777;')
    .text
      | Dashboard
  a(class='item primary-color',href='/kelompok',style='color:#AB2531;')
    .text
      | Kelompok TA
  .right.menu
    a(class='item grey-text',href='#')
      i.alarm.outline.icon.medium.grey-text
    a.item.ui.dropdown
      .text.grey-text
        | username
      i.dropdown.icon
      .menu
        .item.nav-pengaturan
          i.setting.icon.grey-text
          span.grey-text Pengaturan
        .item.nav-keluar
          i.sign.out.icon.grey-text
          span.grey-text Keluar

block main-middle
  .ui.segment.grey-text(align='center',style='background: linear-gradient(141deg, #e74c3c 10%, #c0392b 51%, #c0392b 75%);color:#FFFFFF;')
    i.photo.icon
    | Poster dan Video produk
  .ui.segment.grey-text
    .ui.grid
      .sixteen.wide.column(align='center')
        h5 Poster
        img.ui.medium.image(src='https://semantic-ui.com/images/wireframe/image.png')
        br
        a.ui.button#ubah-poster(style='background: linear-gradient(141deg, #2ecc71 10%, #27ae60 51%, #27ae60 75%);color:#FFFFFF;',href='#')
          i.icon.write
          |   Ubah Poster
    br
    hr
    .ui.grid
      .sixteen.wide.column(align='center')
        h5 Video
        video(controls)
          source(src='https://www.w3schools.com/html/mov_bbb.mp4',type='video/mp4')
        br
        a.ui.button#ubah-video(style='background: linear-gradient(141deg, #2ecc71 10%, #27ae60 51%, #27ae60 75%);color:#FFFFFF;',href='#')
          i.icon.write
          |   Ubah Video

block right-middle
  .ui.card
    .image
      img(src='https://semantic-ui.com/images/avatar2/large/kristy.png')
    .content
      a.header username
      .meta
        span.date Nama Lengkap
      .description
        | Deskripsi
    .extra.content
      a(href='/pengaturan')
        i.setting.icon
        | Pengaturan

block modal
  .ui.modal.ubah-poster
    i.close.icon
    .header Ubah Poster Produk
    .content
      .ui.form
        .field
          label Format yang diperbolehkan .jpeg atau .png
          input(type='file', name='poster')
        .field
          button.ui.button(type='submit',style='background: linear-gradient(141deg, #2ecc71 10%, #27ae60 51%, #27ae60 75%);color:#FFFFFF;') Kirim

  .ui.modal.ubah-video
    i.close.icon
    .header Ubah Video Produk
    .content
      .ui.form
        .field
          label Format yang diperbolehkan .mp4
          input(type='file', name='video')
        .field
          button.ui.button(type='submit',style='background: linear-gradient(141deg, #2ecc71 10%, #27ae60 51%, #27ae60 75%);color:#FFFFFF;') Kirim
