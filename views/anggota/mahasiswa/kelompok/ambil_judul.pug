extends ../templates/template1

block navigasi
  a(class='item primary-color',href='/',style='color:#777777;')
    .text
      | Dashboard
  a(class='item primary-color',href='/kelompok',style='color:#AB2531;')
    .text
      | Kelompok TA
  .right.menu
    a(class='item grey-text',href='#')
      i.alarm.outline.icon.medium.grey-text
    a.item.ui.dropdown
      .text.grey-text
        | username
      i.dropdown.icon
      .menu
        .item.nav-pengaturan
          i.setting.icon.grey-text
          span.grey-text Pengaturan
        .item.nav-keluar
          i.sign.out.icon.grey-text
          span.grey-text Keluar

block main-middle
  .ui.segment.grey-text(align='center',style='background: linear-gradient(141deg, #e74c3c 10%, #c0392b 51%, #c0392b 75%);color:#FFFFFF;')
    i.add.icon
    | Ambil Judul
  .ui.segment.grey-text
      .ui.form
        .fields
          .sixteen.wide.field
            .ui.left.icon.input
              input(type='text', placeholder='Tuliskan Judul Tugas Akhir',style='width:100%;')
              i.search.icon
      .ui.accordion
        .title
          i.dropdown.icon.blue-text
          span.blue-text Lakukan pencarian secara detail
        .content
          .fields
            .eight.wide.field
              div Institusi Pendidikan
              select.ui.dropdown(name='universitas')
                option(value='') Pilih asal Tugas Akhir Institusi Pendidikan
            br
            .eight.wide.field
              div Jenjang
              select.ui.dropdown(name='jenjang')
                option(value='') Pilih jenjang
            br
          .fields
            .eight.wide.field
              div Prodi
              select.ui.dropdown(name='universitas')
                option(value='') Pilih prodi Tugas Akhir
            br
            .eight.wide.field
              div Tahun Ajaran
              select.ui.dropdown(name='tahun_ajaran')
                option(value='') Pilih tahun ajaran Tugas Akhir
            br
          .fields
            .eight.wide.field
              div Semester
              select.ui.dropdown(name='semester')
                option(value='') Pilih semester
            br
            .eight.wide.field
              div Dosen pengusul judul
              select.ui.dropdown(name='dosen_pengusul')
                option(value='') Pilih Dosen pengusul judul
            br
          .fields
            .eight.wide.field
              button(type='submit',class='large ui button button-submit',style='background: linear-gradient(to bottom, rgba(73,155,234,1) 0%, rgba(6,77,153,1) 100%);color:#FFFFFF;') Mulai Cari


      .ui.relaxed.divided.list
          .item(style='padding:1em;')
            .content
              a.tambah-kelompok-ta(href='#') 1. Food Robot
          .item(style='padding:1em;')
            .content
              a.tambah-kelompok-ta(href='#')  2. Camera Trap


block right-middle
  .ui.card
    .image
      img(src='https://semantic-ui.com/images/avatar2/large/kristy.png')
    .content
      a.header username
      .meta
        span.date Nama Lengkap
      .description
        | Deskripsi
    .extra.content
      a(href='/pengaturan')
        i.setting.icon
        | Pengaturan

block modal
  .ui.modal.tambah-kelompok-ta-modal
    i.close.icon
    .header Food Robot
      a.ui.button(style='float:right;background: linear-gradient(141deg, #2ecc71 10%, #27ae60 51%, #27ae60 75%);color:#FFFFFF;',href='/mahasiswa/kelompok/tambah')
        i.icon.add
        | Ambil Judul
    .content
      h4 Dosen Pengusul Judul
      ol
        li Nama
      br
      h4 Deskripsi
      p Deksripsi mengenai judul Tugas Akhir
      br
      h4 Alat
      p Ketersediaan alat
