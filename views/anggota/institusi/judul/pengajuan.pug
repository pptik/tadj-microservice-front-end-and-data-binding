extends ../templates/template1

block navigasi
  a(class='item primary-color',href='/',style='color:#777777;')
    .text
      | Dashboard
  a(class='item primary-color',href='/institusi/anggota',style='color:#777777;')
    .text
      | Anggota
  a(class='item primary-color',href='/institusi/judul',style='color:#AB2531;')
    .text
      | Judul TA
  a(class='item primary-color',href='/institusi/kelompok',style='color:#777777;')
    .text
      | Kelompok TA
  .right.menu
    a(class='item grey-text',href='#')
      i.alarm.outline.icon.medium.grey-text
    a.item.ui.dropdown
      .text.grey-text
        | username
      i.dropdown.icon
      .menu
        .item.nav-pengaturan
          i.setting.icon.grey-text
          span.grey-text Pengaturan
        .item.nav-keluar
          i.sign.out.icon.grey-text
          span.grey-text Keluar

block main-middle
  .ui.segment.grey-text(align='center',style='background: linear-gradient(141deg, #e74c3c 10%, #c0392b 51%, #c0392b 75%);color:#FFFFFF;')
    i.list.layout.icon
    | Pengajuan Judul TA
  .ui.segment.grey-text
    br
    .ui.grid(style='padding:0 1em 1em 1em;')
      .sixteen.wide.column
        br
        table.ui.very.basic.collapsing.celled.table(style='width:100%;')
          thead
            tr
              th No
              th Judul
              th Aksi
          tbody
            tr
              td 1
              td BITS: Sistem Manajemen On-Street Parking
              td
                a#detail-pengajuan-judul(href='#') Detail
                br
                br
                a#aksi-pengajuan-judul(href='#') Aksi

block right-middle
  .ui.card
    .image
      img(src='https://semantic-ui.com/images/avatar2/large/kristy.png')
    .content
      a.header username
      .meta
        span.date Nama Lengkap
      .description
        | Deskripsi
    .extra.content
      a(href='/pengaturan')
        i.setting.icon
        | Pengaturan

block modal

  .ui.modal.aksi-pengajuan-judul
    i.close.icon
    .header Aksi
    .content
      .ui.form
        .field
          button.ui.button(type='submit',style='background: linear-gradient(141deg, #2ecc71 10%, #27ae60 51%, #27ae60 75%);color:#FFFFFF;') Terima Judul
      br
      .ui.form
        .field
          button.ui.button(type='submit',style='background: linear-gradient(141deg, #e74c3c 10%, #c0392b 51%, #c0392b 75%);color:#FFFFFF;') Tolak Judul


  .ui.modal.detail-pengajuan-judul
    i.close.icon
    .header Detail
    .content
      table.ui.very.basic.collapsing.celled.table(style='width:100%;')
        thead
          tr
            th Judul TA
            th Pengusul
            th Tahun Ajaran
            th Deskripsi TA
            th Deskripsi Alat
        tbody
          tr
            td BITS: Sistem Manajemen On-Street Parking
            td
              ol
                li a
                li b
            td 2016/2017
            td Deskripsi TA
            td Deskripsi Alat
