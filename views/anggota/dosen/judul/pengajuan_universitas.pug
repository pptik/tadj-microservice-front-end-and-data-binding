extends ../templates/template1

block navigasi
  a(class='item primary-color',href='/',style='color:#777777;')
    .text
      | Dashboard
  a(class='item primary-color',href='/bimbingan',style='color:#777777;')
    .text
      | Bimbingan
  a(class='item primary-color',href='/judul',style='color:#AB2531;')
    .text
      | Judul TA
  .right.menu
    a(class='item grey-text',href='#')
      i.alarm.outline.icon.medium.grey-text
    a.item.ui.dropdown
      .text.grey-text
        | username
      i.dropdown.icon
      .menu
        .item
          i.setting.icon.grey-text
          span.grey-text Pengaturan
        .item
          i.sign.out.icon.grey-text
          span.grey-text Keluar

block main-middle
  .ui.segment.grey-text(align='center',style='background: linear-gradient(141deg, #e74c3c 10%, #c0392b 51%, #c0392b 75%);color:#FFFFFF;')
    i.university.icon
    | Institut Teknologi Bandung
  .ui.segment.grey-text
    .ui.grid
      .sixteen.wide.column
        a#pengajuan-judul(href='#',class='ui button button-submit',style='background: linear-gradient(to bottom, rgba(73,155,234,1) 0%, rgba(6,77,153,1) 100%);color:#FFFFFF;float:right;') Ajukan Judul Tugas Akhir
        br
        br
        table.ui.very.basic.collapsing.celled.table(style='width:100%;')
          thead
            tr
              th No
              th Judul
              th Aksi
          tbody
            tr
              td 1
              td BITS: Sistem Manajemen On-Street Parking
              td
                a#detail-pengajuan-judul(href='#') Detail
                br
                br
                a#aksi-pengajuan-judul(href='#') Ubah


block right-middle
  .ui.card
    .image
      img(src='https://semantic-ui.com/images/avatar2/large/kristy.png')
    .content
      a.header username
      .meta
        span.date Nama Lengkap
      .description
        | Deskripsi
    .extra.content
      a
        i.setting.icon
        | Pengaturan

block modal
  .ui.modal.aksi-pengajuan-judul
    i.close.icon
    .header Ubah
    .content
      .ui.form
        .field
          label Judul
          input(type='text', name='judul', placeholder='Judul tugas akhir')

        .field
          label Tahun Ajaran
          select.ui.dropdown
            option(value='') Pilih Tahun Ajaran
            option(value='1') 2016/2017

        .field
          label Deskripsi secara umum
          textarea(rows='3',style='resize:none;')

        .field
          label Deskripsi alat
          textarea(rows='3',style='resize:none;')

        .field
          button.ui.button(type='submit',style='background: linear-gradient(141deg, #2ecc71 10%, #27ae60 51%, #27ae60 75%);color:#FFFFFF;') Kirim

  .ui.modal.detail-pengajuan-judul
    i.close.icon
    .header Detail
    .content
      table.ui.very.basic.collapsing.celled.table(style='width:100%;')
        thead
          tr
            th Judul TA
            th Tahun Ajaran
            th Deskripsi TA
            th Deskripsi Alat
            th Status Pengajuan
        tbody
          tr
            td BITS: Sistem Manajemen On-Street Parking
            td 2016/2017
            td Deskripsi TA
            td Deskripsi Alat
            td Pending

  .ui.modal.form-pengajuan-judul
    i.close.icon
    .header Form Pengajuan Judul
    .content
      .ui.form
        .field
          label Judul
          input(type='text', name='judul', placeholder='Judul tugas akhir')

        .field
          label Tahun Ajaran
          select.ui.dropdown
            option(value='') Pilih Tahun Ajaran
            option(value='1') 2016/2017

        .field
          label Deskripsi secara umum
          textarea(rows='3',style='resize:none;')

        .field
          label Deskripsi alat
          textarea(rows='3',style='resize:none;')

        .field
          button.ui.button(type='submit',style='background: linear-gradient(141deg, #2ecc71 10%, #27ae60 51%, #27ae60 75%);color:#FFFFFF;') Kirim
