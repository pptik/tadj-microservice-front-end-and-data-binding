extends ../templates/template1

block navigasi
  a(class='item primary-color',href='/',style='color:#777777;')
    .text
      | Dashboard
  a(class='item primary-color',href='/bimbingan',style='color:#AB2531;')
    .text
      | Bimbingan
  a(class='item primary-color',href='/judul',style='color:#777777;')
    .text
      | Judul TA
  .right.menu
    a(class='item grey-text',href='#')
      i.alarm.outline.icon.medium.grey-text
    a.item.ui.dropdown
      .text.grey-text
        | username
      i.dropdown.icon
      .menu
        .item.nav-pengaturan
          i.setting.icon.grey-text
          span.grey-text Pengaturan
        .item.nav-keluar
          i.sign.out.icon.grey-text
          span.grey-text Keluar

block main-middle
  .ui.segment.grey-text(align='center',style='background: linear-gradient(141deg, #e74c3c 10%, #c0392b 51%, #c0392b 75%);color:#FFFFFF;')
    i.comment.icon
    | Bimbingan
  .ui.segment.grey-text
    form.ui.form
      .field
          textarea(rows='5', placeholder='Tuliskan bimbingan anda disini',style='resize:none;')

      button.ui.button(type='submit') Submit
  .ui.segment.grey-text
    .ui.items
      .item
          .ui.tiny.image
            img(src='/images/wireframe/image.png')

          .content
            a.header Username
            .meta
              span 1 menit yang lalu
            .description
              p
            .extra
              | Bimbingannya disini

block right-middle
  .ui.card
    .image
      img(src='https://semantic-ui.com/images/avatar2/large/kristy.png')
    .content
      a.header username
      .meta
        span.date Nama Lengkap
      .description
        | Deskripsi
    .extra.content
      a(href='/pengaturan')
        i.setting.icon
        | Pengaturan
