extends ../templates/template1

block navigasi
  a(class='item primary-color',href='/',style='color:#AB2531;')
    .text
      | Dashboard
  a(class='item primary-color',href='/bimbingan',style='color:#777777;')
    .text
      | Bimbingan
  .right.menu
    a(class='item grey-text',href='#')
      i.alarm.outline.icon.medium.grey-text
    a.item.ui.dropdown
      .text.grey-text
        | username
      i.dropdown.icon
      .menu
        .item.nav-pengaturan
          i.setting.icon.grey-text
          span.grey-text Pengaturan
        .item.nav-keluar
          i.sign.out.icon.grey-text
          span.grey-text Keluar

block main-middle
  .ui.segment.grey-text(align='center',style='background: linear-gradient(141deg, #e74c3c 10%, #c0392b 51%, #c0392b 75%);color:#FFFFFF;')
    i.user.icon
    | Pengaturan Profil
  .ui.segment.grey-text
    span(style='float:right')
      a(href='/profil/username',target='_blank')
        i.share.icon
        | Bagikan profil ke publik
    .ui.grid(style='padding:0 1em 1em 1em;')
      br
      .ui.relaxed.list
        .item
          i.mail.icon
          .content
            a.grey-text Email
            .description me@email.com
        .item
          i.child.icon
          .content
            a.grey-text Username
            .description emilhamep
        .item
          i.user.icon
          .content
            a.grey-text Nama Depan
            .description John
        .item
          i.user.icon
          .content
            a.grey-text Nama Belakang
            .description Doe
        br
        .item
          a.ui.button(style='background: linear-gradient(141deg, #2ecc71 10%, #27ae60 51%, #27ae60 75%);color:#FFFFFF;',href='/pengaturan/profil/ubah')
            i.icon.write
            |   Ubah Data Profil


block right-middle
  .ui.card
    .image
      img(src='https://semantic-ui.com/images/avatar2/large/kristy.png')
    .content
      a.header username
      .meta
        span.date Nama Lengkap
      .description
        | Deskripsi
    .extra.content
      a(href='/pengaturan')
        i.setting.icon
        | Pengaturan

block modal
  .ui.modal.tambah-institusi
    i.close.icon
    .header Tambah Institusi Pendidikan
    .content
      .ui.form
        .field
          label Institusi Pendidikan
          select.ui.dropdown
            option(value='') Pilih Institusi Pendidikan
            option(value='1') Universitas Indonesia
            option(value='0') Universitas Gajah Mada
        .field
          label Jenjang
          select.ui.dropdown
            option(value='') Pilih Jenjang
            option(value='1') S1
            option(value='0') S2
        .field
          label Prodi
          select.ui.dropdown
            option(value='') Pilih Prodi
            option(value='1') Teknik Kelautan
            option(value='0') Teknik Perminyakan
        .field
          label NIM
          input(type='text', name='first-name', placeholder='Tuliskan NIM')
        .field
          label Foto KTM (Kartu Tanda Mahasiswa)
          input(type='file', name='first-name')
        .field
          button.ui.button(type='submit',style='background: linear-gradient(141deg, #2ecc71 10%, #27ae60 51%, #27ae60 75%);color:#FFFFFF;') Kirim

  .ui.modal.ubah-institusi
    i.close.icon
    .header Ubah Data Institusi Pendidikan
    .content
      .ui.form
        .field
          label Institusi Pendidikan
          select.ui.dropdown
            option(value='') Pilih Institusi Pendidikan
            option(value='1') Universitas Indonesia
            option(value='0') Universitas Gajah Mada
        .field
          label Jenjang
          select.ui.dropdown
            option(value='') Pilih Jenjang
            option(value='1') S1
            option(value='0') S2
        .field
          label Prodi
          select.ui.dropdown
            option(value='') Pilih Prodi
            option(value='1') Teknik Kelautan
            option(value='0') Teknik Perminyakan
        .field
          label NIM
          input(type='text', name='first-name', placeholder='Tuliskan NIM')
        .field
          label Foto KTM (Kartu Tanda Mahasiswa)
          input(type='file', name='first-name')
        .field
          button.ui.button(type='submit',style='background: linear-gradient(141deg, #2ecc71 10%, #27ae60 51%, #27ae60 75%);color:#FFFFFF;') Kirim
