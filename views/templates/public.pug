    script(src='/semanticUI/semantic.min.js')
  body
    section(class='ui container')
      nav(class='ui secondary pointing menu')
        block navigasi
      main(class='ui segment',style='padding: 3em 4em 3em 4em;background:linear-gradient(45deg, rgba(180,29,42,1) 0%, rgba(255,73,41,1) 100%);')
        .ui.grid.stackable
          block content
      footer(align='center',class='grey-text')= copyright
    script.
      $('.carousel-introduction').slick({
        slidesToShow: 1,
        slidesToScroll: 1,
        autoplay: true,
        autoplaySpeed: 3000,
        dots: true,
        infinite: true,
        arrows: false,
        focusOnSelect: true
      });
